<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.szymon.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ROBOT BLUETOOTH"
        android:id="@+id/textView"
        android:textSize="25dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:autoText="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="w"
        android:id="@+id/buttonUp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonExploring"
        android:layout_alignStart="@+id/buttonExploring"
        android:layout_alignRight="@+id/buttonExploring"
        android:layout_alignEnd="@+id/buttonExploring" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="r"
        android:id="@+id/buttonDown"
        android:layout_below="@+id/buttonUp"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="a"
        android:id="@+id/buttonLeft"
        android:layout_below="@+id/buttonUp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonDown"
        android:layout_toStartOf="@+id/buttonDown" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="d"
        android:id="@+id/buttonRight"
        android:layout_alignTop="@+id/buttonDown"
        android:layout_toRightOf="@+id/buttonDown"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start exploring"
        android:id="@+id/buttonExploring"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registering"
        android:id="@+id/registering"
        android:checked="true"
        android:layout_marginBottom="43dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/buttonClear"
        android:layout_alignEnd="@+id/buttonClear"
        android:layout_alignLeft="@+id/buttonClear"
        android:layout_alignStart="@+id/buttonClear" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear history"
        android:id="@+id/buttonClear"
        android:layout_above="@+id/registering"
        android:layout_alignRight="@+id/buttonUp"
        android:layout_alignEnd="@+id/buttonUp"
        android:layout_alignLeft="@+id/buttonUp"
        android:layout_alignStart="@+id/buttonUp" />

</RelativeLayout>
